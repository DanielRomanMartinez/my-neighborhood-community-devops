{
  "settings": {
    "index": {
      "number_of_shards": 2,
      "number_of_replicas": 1
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "UUID": {
          "type": "keyword",
          "index": true
        },
        "gateway_transaction_id": {
          "type": "text"
        },
        "action": {
          "type": "text"
        },
        "message": {
          "type": "text"
        },
        "is_processed": {
          "type": "boolean"
        },
        "occurred_on": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ssZ"
        }
      }
    }
  }
}
